{% extends 'base.html.twig' %}

{% block title %}Administratoriaus valdymas{% endblock %}

{% block body %}
    <h1>Administratoriaus valdymas</h1>

    <h2>Bendrijos</h2>
    <a href="{{ path('app_administratorius_bendrija_prideti') }}">Pridėti bendriją</a>
    <ul>
        {% for bendrija in bendrijos %}
            <li>{{ bendrija.pavadinimas }} <a href="{{ path('app_administratorius_bendrija_salinti', {id: bendrija.id}) }}">Šalinti</a></li>
        {% endfor %}
    </ul>

    <h2>Paslaugos</h2>
    <a href="{{ path('app_administratorius_paslauga_prideti') }}">Pridėti paslaugą</a>
    <ul>
        {% for paslauga in paslaugos %}
            <li>{{ paslauga.vardas }} ({{ paslauga.matas }}) <a href="{{ path('app_administratorius_paslauga_salinti', {id: paslauga.id}) }}">Šalinti</a></li>
        {% endfor %}
    </ul>

    <h2>Naudotojai</h2>
    <a href="{{ path('app_administratorius_naudotojas_prideti') }}">Pridėti naudotoją</a>
    <ul>
        {% for naudotojas in naudotojai %}
            <li>{{ naudotojas.username }} ({{ naudotojas.role }}) <a href="{{ path('app_administratorius_naudotojas_salinti', {id: naudotojas.id}) }}">Šalinti</a></li>
        {% endfor %}
    </ul>
{% endblock %}
