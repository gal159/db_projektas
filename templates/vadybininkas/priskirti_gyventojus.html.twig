{% extends 'base.html.twig' %}

{% block title %}Priskirti gyventojus{% endblock %}

{% block body %}
    <div class="container">
        <h1>Priskirti gyventojus bendrijai: <strong>{{ bendrija.pavadinimas }}</strong></h1>

        <form method="POST">
            <div class="gyventojai-list">
                {% for gyventojas in gyventojai %}
                    <label class="gyventojas">
                        <input type="checkbox" name="gyventojai[]" value="{{ gyventojas.id }}"
                               {% if gyventojas.bendrija and gyventojas.bendrija.id == bendrija.id %}checked{% endif %}>
                        {{ gyventojas.username }}
                    </label>
                {% endfor %}
            </div>

            <button type="submit">IÅ¡saugoti gyventojus</button>
        </form>
    </div>
{% endblock %}
